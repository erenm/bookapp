type Author{
    id:ID!
    firstName:String
    lastName:String
    books:[Book]
}


type Book{
    id:ID!
    title:String
    author:Author
}

schema{
    query:Query
}

type Query{
    allAuthors: [Author]
    allBooks: [Book]
}

type Mutation{
    addAuthor(firstName:String, lastName:String) : Author
    addBook(title:String, authorId:ID) : Book
}